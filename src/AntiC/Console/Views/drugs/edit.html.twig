                                    <label>Onocology Uses</label>
                                    {% for oncUse in drug.oncUses %}
                                        <div class="row rowBottomHalfBreak">
                                            <div class="col-sm-8">
                                                <input name="onocology[{{ loop.index0 }}][type]" class="form-control" placeholder="e.g. Prostate Cancer" value="{{ oncUse.cancer_type }}" id="onocology" type="text">
