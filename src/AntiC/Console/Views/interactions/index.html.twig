{% extends "base/authenticated.base.html.twig" %}

{# Beginning of Page Header #}
{% block title %}
Manage Interactions
{% endblock title %}

{% block pageStylesheets %}
    <link href="/css/global.css" rel="stylesheet">
    <link href="/css/interactions.css" rel="stylesheet">
{% endblock pageStylesheets %}

{# Beginning of Page Content #}
{% block interactionsActive %}
class="active"
{% endblock interactionsActive %}


{% block content %}
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h1 class="page-header">Interactions</h1>

        <div class="row controls">
            <div class="col-xs-4">
                <input type="text" class="form-control" placeholder="Search">
            </div>
            <div class="pull-right add-interaction-button">
                <a href="/console/interactions/add" class="btn btn-primary"><span class="glyphicon glyphicon-plus-sign"></span> Add Interaction</a>
            </div>
        </div>

        {# Note: This needs to be switched out for Fuel UX Table that sorts and filters out of the box #}
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <tr>
                    <th class="col-md-6">Interaction Name</th>
                    <th class="col-md-6 text-right">Controls</th>
                </tr>
                <tr>
                    <td class="col-md-6">CYP 450 1A2</td>
                    <td class="col-md-6 text-right"><a href="/console/interactions/1" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-edit"></span> Edit</a> <a href="" class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-eye-close"></span> Hide</a></td>
                </tr>
                <tr>
                    <td class="col-md-6">CYP 450 2A6</td>
                    <td class="col-md-6 text-right"><a href="/console/interactions/2" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-edit"></span> Edit</a> <a href="" class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-eye-close"></span> Hide</a></td>
                </tr>
                <tr>
                    <td class="col-md-6">CYP 450 2B6</td>
                    <td class="col-md-6 text-right"><a href="/console/interactions/3" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-edit"></span> Edit</a> <a href="" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-eye-open"></span> Unhide</a></td>
                </tr>
            </table>
        </div>
    </div>
{% endblock content %}