{% extends "base/authenticated.base.html.twig" %}

{# Beginning of Page Header #}
{% block title %}
Add User
{% endblock title %}

{% block pageStylesheets %}
<link href="/css/global.css" rel="stylesheet">
<link href="/css/users.css" rel="stylesheet">
{% endblock pageStylesheets %}

{# Beginning of Page Content #}
{% block usersActive %}
class="active"
{% endblock usersActive %}


{% block content %}
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">Add User</h1>

    <form role="form">
        <div class="col-sm-9">
            <div class="form-group">
                <label for="email-address">Email Address</label>
                <input type="email" class="form-control" id="email-address" placeholder="Enter email" style="max-width:300px;">
            </div>
            <div class="form-group">
                <label for="newPassword">Password</label>
                <input type="password" class="form-control" id="newPassword" placeholder="New Password" style="max-width:300px;">
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password" style="max-width:300px;">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
</div>
</form>
</div>
{% endblock content %}