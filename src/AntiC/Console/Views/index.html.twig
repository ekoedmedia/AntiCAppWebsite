{% extends "base/base.html.twig" %}

{# Beginning of Page Header #}
{% block title %}
Management Login
{% endblock title %}

{% block pageStylesheets %}
    <link href="./css/signin.css" rel="stylesheet">
{% endblock pageStylesheets %}

{# Beginning of Page Content #}
{% block header %}
    <div class="page-header">
        <img src="./img/logo.png" alt="AntiC Cancer App" class="center-block" style="width:200px;">
    </div>
{% endblock header %}

{% block content %}
    <form action="./console" method="get" role="form" class="form-signin">    
        <h2 class="form-signin-heading">Please sign in</h2>
        <input class="form-control" placeholder="Email address" required="" autofocus="" type="email" value="">
        <input class="form-control" placeholder="Password" required="" type="password">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        {# {% if error %}
            <div class="alert alert-warning">
                {{ error }}
            </div>
        {% endif %} #}
        <div class="well well-sm">
            <a href="">I forgot my password</a>
        </div>
    </form>
{% endblock content %}